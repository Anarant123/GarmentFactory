<Page x:Class="GarmentFactory.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GarmentFactory"
      mc:Ignorable="d" 
      d:DesignHeight="120" d:DesignWidth="800"
      Title="AddProductPage">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock Text="Артикул изделия:"
                   FontSize="18"
                   Width="300"/>
        <TextBox x:Name="tbAp"
                 Width="300"
                 Style="{DynamicResource TextBoxStyle}"/>
        <Separator Height="20" Opacity="0"/>
        <Button x:Name="AddProduct"
                Click="AddProduct_Click"
                Content="Добавить"
                Width="200"
                Style="{DynamicResource ButtonStyle}"/>
    </StackPanel>
</Page>
